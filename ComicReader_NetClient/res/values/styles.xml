<resources>

    <style name="style">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="style2">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style3">
        <item name="android:textSize">11sp</item>
    </style>

    <style name="style4">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style5">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">9sp</item>
    </style>

    <style name="style6">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="style7">
        <item name="android:background">#636563</item>
    </style>

    <style name="style_book">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="style_book_info">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="style_advise">
        <item name="android:background">#999999</item>
    </style>

    <style name="textStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffff00</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="resultTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ce9a24</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="editTextStyle">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/list_divider</item>
    </style>

    <style name="bottom_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">13dp</item>
    </style>

</resources>